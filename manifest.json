{
  "manifest_version": 3,
  "name": "React Content Script",
  "version": "1.0.0",
  "action": {
    "default_title": "Popup",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {},

  "permissions": ["storage", "tabs", "activeTab", "scripting", "declarativeNetRequest", "activeTab", "webRequest", "webNavigation"],
  "host_permissions": ["https://*/"],
  "background": {
    "service_worker": "background/src/main.tsx",
    "type": "module"

  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/src/main.tsx"],
      "media": []
    }
  ]
}
